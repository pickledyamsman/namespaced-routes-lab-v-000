<%= form_for @preference, url: admin_settings_path(@preference) do |f| %>
  <div>
    <%= f.label :song_sort_order %><br>
    True: <%= f.radio_button :song_sort_order, "DESC" %>
    False: <%= f.radio_button :song_sort_order, "ASC" %>
  </div>
  <div>
    <%= f.label :artist_sort_order %><br>
    True: <%= f.radio_button :artist_sort_order, "DESC" %>
    False: <%= f.radio_button :artist_sort_order, "ASC" %>
  </div>
  <%= f.submit %>
<% end %>